<%= turbo_frame_tag next_action, class: "next-action" do %>
  <p>
    <% if next_action.done %>
      <s><%= next_action.body %>
    <% else %>
      <%= next_action.body %> 
    <% end %>

    --

    <% if next_action.project.present? %>
      <%= next_action.project.name %>
    <% end %>

    <% if next_action.context.present? && !current_page?(next_actions_path) %>
      @<%= next_action.context %>
    <% end %>
  </p>

  <% if next_action.done %>
    <%= button_to "Not done", next_action_path(next_action), params: { next_action: { done: false } }, method: :patch, class: "mark-as-done-button" %>
  <% else %>
    <%= button_to "Done", next_action_path(next_action), params: { next_action: { done: true } }, method: :patch, class: "mark-as-done-button" %>
  <% end %>

  <%= link_to "Show", next_action_path(next_action), target: "_top" %>
  <%= link_to "Edit", edit_next_action_path(next_action), target: "_top" %>
<% end %>